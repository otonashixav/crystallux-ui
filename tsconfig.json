{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "ES2019"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "postcssOptions": { "useConfig": true }
      }
    ]
  },
  "include": ["./src/**/*"]
}
