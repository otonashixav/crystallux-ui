{
  "name": "crystallux-ui",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/index.jsx",
      "import": "./dist/index.js"
    }
  },
  "version": "0.1.0",
  "description": "A Component Framework for SolidJS",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm clean && pnpm buildTs && pnpm buildCss",
    "buildTs": "tsc && node -e \"require('fs').copyFileSync('./dist/index.js', './dist/index.jsx');\"",
    "buildCss": "postcss \"./src/**/*.css\" --base ./src --dir ./dist",
    "clean": "rimraf \"./dist/*\"",
    "lint": "pnpm lintTs && pnpm lintCss",
    "lintTs": "eslint \"./src\"",
    "lintCss": "stylelint \"./src/**/*.module.css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otonashixav/crystallux-ui.git"
  },
  "keywords": [
    "solidjs",
    "solid-js",
    "component"
  ],
  "author": {
    "name": "Xavier Loh",
    "email": "xavier.loh.yz@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/otonashixav/crystallux-ui/issues"
  },
  "homepage": "https://github.com/otonashixav/crystallux-ui#readme",
  "devDependencies": {
    "@previewjs/cli": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-solid": "^0.6.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-preset-env": "^7.7.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "solid-js": "^1.4.3",
    "stylelint": "^14.8.5",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.7.2",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "peerDependencies": {
    "solid-js": "^1.4.3"
  },
  "browserslist": [
    "defaults and supports proxy"
  ]
}
