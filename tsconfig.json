{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "ES2019"],
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["./src/**/*"]
}
